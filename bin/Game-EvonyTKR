#!/usr/bin/perl
#PODNAME: Game::EvonyTKR
use 5.40.0;
use strict;
use warnings;
use Game::EvonyTKR::Buff;
use Game::EvonyTKR::Buff::Value;
use Game::EvonyTKR::SkillBook::Special;
use Game::EvonyTKR::General;

=head1 NAME

Game::EvonyTKR - wrapper for the Game::EvonyTKR distribution

=cut

my $v = Game::EvonyTKR::Buff::Value->new(
    number  => 10,
);
my $buff = Game::EvonyTKR::Buff->new(
    attribute   => 'Attack',
    value       => $v
);

say $buff->compare($buff);

my $sb = Game::EvonyTKR::SkillBook::Special->new(
    name    => 'New Book 1'
);

$sb->add_buff($buff);

my $g = Game::EvonyTKR::General->new(
  name                  => 'Test General',
  leadership            => 1.0,
  leadership_increment  => 0.1,
  attack                => 1.0,
  attack_increment      => 0.1,
  defense               => 1.0,
  defense_increment     => 0.1,
  politics              => 1.0,
  politics_increment    => 0.1,
  builtInBook           => $sb
);
